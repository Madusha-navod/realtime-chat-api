{
   "name": "realtime-chat-service",
   "version": "1.0.0",
   "description": "A service designed to facilitate communication between services.",
   "main": "index.js",
   "scripts": {
      "build": "tsoa spec-and-routes && tsc",
      "dev": "nodemon",
      "knip": "knip",
      "lint": "eslint 'src/**/*.ts'",
      "lint:fix": "eslint 'src/**/*.ts' --fix",
      "prettier": "prettier --config --check .prettierrc 'src/**/*.ts'",
      "prettier:format": "prettier --config .prettierrc 'src/**/*.ts' --write",
      "pre-commit": "./remove-intermediate-files.sh && pnpm restore-deps && pnpm build && pnpm test:coverage",
      "spec": "tsoa spec",
      "test": "npm test:micro && npm test:integration && npm test:coverage",
      "test:coverage": "jest --coverage --passWithNoTests --testMatch '/work/service/src/**/*.(micro|integration).ts'",
      "test:integration": "jest --passWithNoTests --testMatch '/work/service/src/**/*.integration.ts'",
      "test:micro": "jest --passWithNoTests --testMatch '/work/service/src/**/*.micro.ts'"
   },
   "author": "R. Madusha Navod",
   "license": "ISC",
   "dependencies": {
      "@tsoa/runtime": "6.5.1",
      "axios": "1.7.7",
      "body-parser": "1.20.3",
      "cors": "2.8.5",
      "crypto": "1.0.1",
      "decimal.js": "10.4.3",
      "env-var": "7.5.0",
      "eslint-config-prettier": "9.1.0",
      "express": "4.21.1",
      "express-actuator": "1.8.4",
      "http-status-codes": "2.3.0",
      "inversify": "6.0.3",
      "inversify-binding-decorators": "4.0.0",
      "jsonwebtoken": "9.0.2",
      "prettier": "3.3.3",
      "reflect-metadata": "0.2.2",
      "socket.io": "^4.8.1",
      "swagger-ui-express": "5.0.1",
      "ts-luxon": "5.0.6",
      "winston": "3.17.0",
      "winston-daily-rotate-file": "5.0.0"
   },
   "devDependencies": {
      "@eslint/js": "^9.14.0",
      "@jest/globals": "29.7.0",
      "@stryker-mutator/core": "8.6.0",
      "@tsoa/cli": "6.5.1",
      "@types/cors": "2.8.17",
      "@types/express": "5.0.0",
      "@types/express-actuator": "1.8.3",
      "@types/jest": "29.5.14",
      "@types/jsonwebtoken": "^9.0.7",
      "@types/node": "22.9.0",
      "@types/socket.io": "^3.0.1",
      "@types/supertest": "6.0.2",
      "@types/swagger-ui-express": "4.1.7",
      "eslint": "^9.14.0",
      "expect": "29.7.0",
      "globals": "^15.12.0",
      "jest": "29.7.0",
      "knip": "5.36.7",
      "nodemon": "3.1.7",
      "stryker-cli": "1.0.2",
      "supertest": "7.0.0",
      "ts-jest": "29.2.5",
      "ts-node": "10.9.2",
      "tsx": "4.19.2",
      "typescript": "5.6.3",
      "typescript-eslint": "^8.14.0"
   },
   "type": "module"
}
